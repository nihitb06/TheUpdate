<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/ebgaramond_regular</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:fontFamily">@font/english_towne</item>
    </style>
    <style name="AppTheme.Toolbar.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
