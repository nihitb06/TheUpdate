<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dev.nihitb06.theupdate">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.list.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".data.network.workers.SyncDataIntentService"
            android:exported="false" />

        <activity
            android:name=".ui.details.ArticleDetailsActivity"
            android:parentActivityName=".ui.list.MainActivity" />

        <activity
            android:name=".ui.AboutActivity"
            android:parentActivityName=".ui.list.MainActivity" />

    </application>

</manifest>